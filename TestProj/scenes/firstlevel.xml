<root>
	<objects>
		<gameobject id="FirstObject" indestructable="0" enabled="1" layer="0">
			<transform>
				<position>0 0 3</position>
				<rotation>0 0 0</rotation>
				<scale>1 1 1</scale>
			</transform>

			<components>
				<component type="VCamera">
					<!-- the buffer flags this camera will clear -->
					<clear_color_buffer>1</clear_color_buffer>
					<clear_depth_buffer>1</clear_depth_buffer>
					<clear_accum_buffer>0</clear_accum_buffer>
					<clear_stencil_buffer>0</clear_stencil_buffer>
					<!-- the layers this camera will render -->
					<renderlayers>
						<layer>0</layer>
					</renderlayers>
				</component>
			</components>
			<gameobjects>

			</gameobjects>
		</gameobject>

		

		<gameobject id="Object" indestructable="1" enabled="1" layer="0">
			<transform>
				<position>0 0 0</position>
				<rotation>0 90 0</rotation>
				<scale>1 1 1</scale>
			</transform>
			<components>
				<component type="MeshRenderer">

				</component>
				<component type="Mesh">
					<mesh>Assets/Models/monkey.mesh</mesh>
				</component>
				<component type="Material">
					<vert>Assets/Shaders/Test.vert</vert>
					<frag>Assets/Shaders/Test.frag</frag>
					<texture format="rgb" id="SimpleTexture">
						<path>Assets/Textures/Thatched.jpg</path>
						<type>2d</type>
					</texture>
					<texture format="rgba" id="RedTexture">
						<path>Assets/Textures/red.png</path>
						<type>2d</type>
					</texture>
				</component>
			</components>
			<gameobjects>

			</gameobjects>
		</gameobject>

	</objects>

</root>